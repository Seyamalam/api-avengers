{
  "name": "care-for-all",
  "version": "1.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "test": "bun test",
    "dev": "bun run --filter '*' dev",
    "db:generate": "cd packages/db && drizzle-kit generate",
    "db:migrate": "cd packages/db && drizzle-kit migrate",
    "db:push": "cd packages/db && drizzle-kit push",
    "db:push:app": "cd packages/db && bun run push:app",
    "db:push:bank": "cd packages/db && bun run push:bank",
    "db:studio": "cd packages/db && drizzle-kit studio"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/pg": "^8.15.6",
    "drizzle-kit": "^0.31.7",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.5",
    "drizzle-orm": "0.44.7",
    "hono": "^4.10.6",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "prom-client": "^15.1.3",
    "vite": "^7.2.4",
    "zod": "^4.1.12"
  }
}
