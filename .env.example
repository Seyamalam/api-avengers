# Database
DATABASE_URL=postgres://user:password@postgres:5432/careforall
# Default PostgreSQL credentials: user/password
# An admin user (admin@careforall.com / admin123) is auto-created on first run

# Redis
REDIS_URL=redis://redis:6379

# NATS
NATS_URL=nats://nats:4222

# Auth Service
JWT_SECRET=your-secret-key-change-in-production-minimum-32-characters-required
# For development: hackathon-demo-secret-key-change-in-production-environment

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://jaeger:4318

# Service URLs (for Gateway)
AUTH_SERVICE_URL=http://auth:3001
CAMPAIGN_SERVICE_URL=http://campaign:3002
PLEDGE_SERVICE_URL=http://pledge:3003
PAYMENT_SERVICE_URL=http://payment:3004

# Frontend
VITE_API_URL=http://localhost:8080
VITE_API_TARGET=http://gateway:8080
