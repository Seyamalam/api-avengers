{
  "title": "CareForAll - Event Flow & NATS",
  "tags": [
    "careforall",
    "events",
    "nats"
  ],
  "timezone": "browser",
  "panels": [
    {
      "title": "NATS Connection Status",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 8,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "up{job=\"nats\"}",
          "legendFormat": "NATS Broker",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "value": 1,
              "text": "CONNECTED",
              "color": "green"
            },
            {
              "value": 0,
              "text": "DOWN",
              "color": "red"
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "red"
              },
              {
                "value": 1,
                "color": "green"
              }
            ]
          }
        }
      }
    },
    {
      "title": "Outbox Events Pending",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 8,
        "x": 8,
        "y": 0
      },
      "targets": [
        {
          "expr": "outbox_queue_depth",
          "legendFormat": "Pending",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "green"
              },
              {
                "value": 10,
                "color": "yellow"
              },
              {
                "value": 100,
                "color": "red"
              }
            ]
          }
        }
      }
    },
    {
      "title": "Outbox Processing Rate",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 8,
        "x": 16,
        "y": 0
      },
      "targets": [
        {
          "expr": "rate(events_published_total[1m])",
          "legendFormat": "Events/sec",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "blue"
              }
            ]
          }
        }
      }
    },
    {
      "title": "Event Publishing Rate by Type",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 4
      },
      "targets": [
        {
          "expr": "rate(events_published_total[5m])",
          "legendFormat": "{{event_type}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "label": "Events/sec",
          "format": "ops"
        }
      ],
      "legend": {
        "show": true,
        "alignAsTable": true,
        "rightSide": false
      }
    },
    {
      "title": "Event Consumption Rate by Type",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 4
      },
      "targets": [
        {
          "expr": "rate(events_consumed_total[5m])",
          "legendFormat": "{{event_type}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "label": "Events/sec",
          "format": "ops"
        }
      ],
      "legend": {
        "show": true,
        "alignAsTable": true
      }
    },
    {
      "title": "Outbox Queue Depth Over Time",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 12
      },
      "targets": [
        {
          "expr": "outbox_queue_depth",
          "legendFormat": "Pending Events",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "label": "Count",
          "format": "short"
        }
      ],
      "alert": {
        "conditions": [
          {
            "evaluator": {
              "params": [
                100
              ],
              "type": "gt"
            },
            "operator": {
              "type": "and"
            },
            "query": {
              "params": [
                "A",
                "5m",
                "now"
              ]
            },
            "reducer": {
              "type": "avg"
            },
            "type": "query"
          }
        ],
        "frequency": "60s",
        "name": "High Outbox Queue Depth"
      }
    },
    {
      "title": "Event Processing Latency",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 12
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(event_processing_duration_seconds_bucket[5m]))",
          "legendFormat": "p95",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.50, rate(event_processing_duration_seconds_bucket[5m]))",
          "legendFormat": "p50",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, rate(event_processing_duration_seconds_bucket[5m]))",
          "legendFormat": "p99",
          "refId": "C"
        }
      ],
      "yaxes": [
        {
          "label": "Latency",
          "format": "s"
        }
      ]
    },
    {
      "title": "Event Flow: pledge.created",
      "type": "graph",
      "gridPos": {
        "h": 6,
        "w": 8,
        "x": 0,
        "y": 20
      },
      "targets": [
        {
          "expr": "rate(events_published_total{event_type=\"pledge.created\"}[5m])",
          "legendFormat": "Published",
          "refId": "A"
        },
        {
          "expr": "rate(events_consumed_total{event_type=\"pledge.created\"}[5m])",
          "legendFormat": "Consumed",
          "refId": "B"
        }
      ],
      "yaxes": [
        {
          "label": "Rate",
          "format": "ops"
        }
      ]
    },
    {
      "title": "Event Flow: pledge.updated",
      "type": "graph",
      "gridPos": {
        "h": 6,
        "w": 8,
        "x": 8,
        "y": 20
      },
      "targets": [
        {
          "expr": "rate(events_published_total{event_type=\"pledge.updated\"}[5m])",
          "legendFormat": "Published",
          "refId": "A"
        },
        {
          "expr": "rate(events_consumed_total{event_type=\"pledge.updated\"}[5m])",
          "legendFormat": "Consumed (Campaign)",
          "refId": "B"
        }
      ],
      "yaxes": [
        {
          "label": "Rate",
          "format": "ops"
        }
      ]
    },
    {
      "title": "Event Flow: payment.update",
      "type": "graph",
      "gridPos": {
        "h": 6,
        "w": 8,
        "x": 16,
        "y": 20
      },
      "targets": [
        {
          "expr": "rate(events_published_total{event_type=\"payment.update\"}[5m])",
          "legendFormat": "Published (Payment)",
          "refId": "A"
        },
        {
          "expr": "rate(events_consumed_total{event_type=\"payment.update\"}[5m])",
          "legendFormat": "Consumed (Pledge)",
          "refId": "B"
        }
      ],
      "yaxes": [
        {
          "label": "Rate",
          "format": "ops"
        }
      ]
    },
    {
      "title": "Consumer Lag (Events Behind)",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 26
      },
      "targets": [
        {
          "expr": "sum(rate(events_published_total[5m])) - sum(rate(events_consumed_total[5m]))",
          "legendFormat": "Lag (Pub - Con)",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "label": "Events/sec",
          "format": "ops"
        }
      ],
      "alert": {
        "conditions": [
          {
            "evaluator": {
              "params": [
                10
              ],
              "type": "gt"
            },
            "operator": {
              "type": "and"
            },
            "query": {
              "params": [
                "A",
                "5m",
                "now"
              ]
            },
            "reducer": {
              "type": "avg"
            },
            "type": "query"
          }
        ],
        "frequency": "60s",
        "name": "High Consumer Lag"
      }
    }
  ],
  "refresh": "5s",
  "schemaVersion": 27,
  "version": 1,
  "time": {
    "from": "now-15m",
    "to": "now"
  }
}
