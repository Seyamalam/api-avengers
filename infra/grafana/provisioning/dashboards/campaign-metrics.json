{
  "title": "CareForAll - Campaign Metrics",
  "tags": [
    "careforall",
    "campaigns",
    "business"
  ],
  "timezone": "browser",
  "panels": [
    {
      "title": "Total Campaigns Created",
      "type": "stat",
      "gridPos": {
        "h": 6,
        "w": 6,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "campaign_service_up",
          "legendFormat": "Total",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "blue"
              },
              {
                "value": 10,
                "color": "green"
              },
              {
                "value": 50,
                "color": "yellow"
              }
            ]
          }
        }
      },
      "options": {
        "graphMode": "area",
        "colorMode": "value"
      }
    },
    {
      "title": "Total Pledges",
      "type": "stat",
      "gridPos": {
        "h": 6,
        "w": 6,
        "x": 6,
        "y": 0
      },
      "targets": [
        {
          "expr": "pledge_service_up",
          "legendFormat": "Pledges",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "purple"
              }
            ]
          }
        }
      },
      "options": {
        "graphMode": "area",
        "colorMode": "value"
      }
    },
    {
      "title": "Total Donations ($)",
      "type": "stat",
      "gridPos": {
        "h": 6,
        "w": 6,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "expr": "sum(campaign_total_amount)",
          "legendFormat": "Total Raised",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "green"
              },
              {
                "value": 10000,
                "color": "yellow"
              },
              {
                "value": 50000,
                "color": "red"
              }
            ]
          }
        }
      },
      "options": {
        "graphMode": "area",
        "colorMode": "value"
      }
    },
    {
      "title": "Success Rate",
      "type": "gauge",
      "gridPos": {
        "h": 6,
        "w": 6,
        "x": 18,
        "y": 0
      },
      "targets": [
        {
          "expr": "rate(pledges_captured_total[5m]) / rate(pledges_created_total[5m]) * 100",
          "legendFormat": "Success %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "red"
              },
              {
                "value": 50,
                "color": "yellow"
              },
              {
                "value": 80,
                "color": "green"
              }
            ]
          }
        }
      }
    },
    {
      "title": "Campaign Creation Rate",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 6
      },
      "targets": [
        {
          "expr": "rate(campaigns_created_total[5m])",
          "legendFormat": "Campaigns/sec",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "label": "Rate",
          "format": "ops"
        }
      ],
      "xaxis": {
        "mode": "time"
      }
    },
    {
      "title": "Pledge Creation Rate",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 6
      },
      "targets": [
        {
          "expr": "rate(pledges_created_total[5m])",
          "legendFormat": "Pledges/sec",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "label": "Rate",
          "format": "ops"
        }
      ],
      "xaxis": {
        "mode": "time"
      }
    },
    {
      "title": "Pledge Status Distribution",
      "type": "piechart",
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 0,
        "y": 14
      },
      "targets": [
        {
          "expr": "sum by (status) (pledge_status_count)",
          "legendFormat": "{{status}}",
          "refId": "A"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right"
        }
      }
    },
    {
      "title": "Payment Success vs Failures",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 8,
        "y": 14
      },
      "targets": [
        {
          "expr": "rate(payment_succeeded_total[5m])",
          "legendFormat": "Succeeded",
          "refId": "A"
        },
        {
          "expr": "rate(payment_failed_total[5m])",
          "legendFormat": "Failed",
          "refId": "B"
        }
      ],
      "yaxes": [
        {
          "label": "Rate",
          "format": "ops"
        }
      ]
    },
    {
      "title": "Average Pledge Amount",
      "type": "graph",
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 16,
        "y": 14
      },
      "targets": [
        {
          "expr": "avg(pledge_amount)",
          "legendFormat": "Avg Amount",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "label": "Amount",
          "format": "currencyUSD"
        }
      ]
    },
    {
      "title": "Top Campaigns by Amount Raised",
      "type": "table",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 22
      },
      "targets": [
        {
          "expr": "topk(10, campaign_current_amount)",
          "legendFormat": "",
          "refId": "A",
          "format": "table"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {},
            "indexByName": {},
            "renameByName": {
              "campaign_id": "Campaign ID",
              "Value": "Amount Raised"
            }
          }
        }
      ]
    },
    {
      "title": "Recent Pledge Activity",
      "type": "table",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 22
      },
      "targets": [
        {
          "expr": "topk(20, pledge_created_timestamp)",
          "legendFormat": "",
          "refId": "A",
          "format": "table"
        }
      ]
    }
  ],
  "refresh": "5s",
  "schemaVersion": 27,
  "version": 1,
  "time": {
    "from": "now-1h",
    "to": "now"
  }
}
